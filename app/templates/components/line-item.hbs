<div class="row line-item">
	<div class="col-md-3">
		{{lineitem.productname}}
	</div>
	<div class="col-md-2">
		{{lineitem.productprice}}
	</div>
	<div class="col-md-3">
		<div class="row">
			<div class="col-md-2">
				{{lineitem.quantity}}
			</div>
			<div class="col-md-10">
				<div class="btn-group" role="group">
					<button class="btn btn-default" {{action "incrementQuantity"}}>
						<span class="glyphicon glyphicon-plus"></span>
					</button>					
					<button class="btn btn-default" {{action "decrementQuantity"}}>
						<span class="glyphicon glyphicon-minus"></span>
					</button>					
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-2">
		{{lineitem.total}}
		<button class="btn btn-default" {{action "remove"}}>
			<span class="glyphicon glyphicon-remove"></span>
		</button>
</div>
</div>